@model IEnumerable<Book>

@foreach (var book in Model)
{
    <div class="card mb-3">
        <div class="row no-gutter">
            <div class="col-md-3">
                <img src="~/img/@book.ImageUrl" alt="" class="card-img">

            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <h5 class="card-title">
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@book.Id">@book.Name</a> 
                    </h5>
                    <h5 class="card-title">
                        @book.Author
                    </h5>
                    <p class="card-text">
                        @book.ShortDescription
                    </p>
                    <p class="card-text">
                        @book.Pages
                    </p>
                    <p class="card-text">
                        <small class="text-muted">
                            3 days ago
                        </small>
                    </p>

                </div>
            </div>
        </div>
    </div>

}
